snippet bc "base css"
* {
	margin: 0;
	box-sizing: border-box;
}

body {
	font-family: sans-serif;
}
endsnippet

snippet st "standar"
max-width: $1;
width: $2;
height: $3;
margin: $4;
padding: $5;

endsnippet

snippet flex "Flex structure"
display: flex;
flex-flow: $1 $2;
justify-content: $3;
align-items: $4;
endsnippet

